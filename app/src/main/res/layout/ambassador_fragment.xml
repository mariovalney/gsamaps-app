<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/azul">

        <TextView
            android:id="@+id/ambassador_textview_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_title_white"/>

        <TextView
            android:id="@+id/ambassador_textview_instituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_description_white"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/list_item_icon_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_place"
            android:paddingRight="16dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ambassador_textview_instituicao_endereco_linha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_description"/>

            <TextView
                android:id="@+id/ambassador_textview_instituicao_endereco_linha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/detail_description"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>